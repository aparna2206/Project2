pipeline{
agent any
    tools {
        maven 'localMaven'
    }
    parameters{
        string(name: 'tomcat_dev',defaultvalue: '52.90.7.207', description: 'Staging Server')
        string(name: 'tomcat_prod',defaultvalue: '18.233.0.90', description: 'Staging Production')
    }
    triggers{
        pollscm('* * * * *')
    }
    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        bat "winscp -i C:/Users/Admin/Desktop/EC2/MyNewKey.pem **/target/*.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat7/webapps"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                       bat "winscp -i C:/Users/Admin/Desktop/EC2/MyNewKey.pem **/target/*.war ec2-user@${params.tomcat_prod}:/var/lib/tomcat7/webapps"
                    }
                }
            }
        }
    }
}