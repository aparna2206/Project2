pipeline{
agent any
    tools {
        maven 'localMaven'
    }
    parameters{
        string(name: 'tomcat_dev',defaultValue: '52.90.7.207', description: 'Staging Server')
        string(name: 'tomcat_prod',defaultValue: '18.233.0.90', description: 'Staging Production')
    }
    triggers{
        pollSCM('* * * * *')
    }
    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "scp -i C:/Users/Admin/Desktop/EC2/MyNewKey.pem C:/Program Files (x86)/Jenkins/workspace/FullyAutomated/target/Project2.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat7/webapps"
                        
                    }
                }

                stage ('Deploy to Production'){
                    steps {
                        sh "scp -i C:/Users/Admin/Desktop/EC2/MyNewKey.pem C:/Program Files (x86)/Jenkins/workspace/FullyAutomated/target/Project2.war ec2-user@${params.tomcat_prod}:/var/lib/tomcat7/webapps"
                       
                    }
                }
            }
        }
    }
}