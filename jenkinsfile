pipeline{
agent any
    stages{
        stage('Build'){
            steps{
               sh -x 'c:/Program Files/Apache Software Foundation/apache-maven-3.5.3/bin/mvn clean package'
            }
            post{
                success{
                    echo 'Now archiving......'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        
    }
}